{
  "manifest_version": 3,
  "name": "AI Chat Navigator",
  "version": "1.0.0",
  "description": "Navigate long AI conversations with ease. Organize and jump to specific Q&A pairs in ChatGPT, Claude, and other AI assistants.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "identity"
  ],

  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*", 
    "https://claude.ai/*",
    "https://bard.google.com/*",
    "https://gemini.google.com/*",
    "https://gemini.google-b197145817.com/*",
    "https://www.bing.com/chat*",
    "https://you.com/*",
    "https://sheets.googleapis.com/*",
    "https://www.googleapis.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://gemini.google-b197145817.com/*",
        "https://www.bing.com/*",
        "https://you.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "index.html",
    "default_title": "AI Chat Navigator"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "app.js",
        "app-simple.js",
        "lib/*",
        "components/*",
        "utils/*",
        "trickle/*"
      ],
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://gemini.google-b197145817.com/*",
        "https://www.bing.com/*",
        "https://you.com/*"
      ]
    }
  ]
}